<div class="upload-window">
    <div class="upload-content">
        <form class="form" action="/picture/upload" method="POST" enctype='multipart/form-data'>
            <label for="title">Titel</label>
            <input type="text" id="title" name="title" required>
            <label for="description">Beskrivning</label>
            <textarea name="description" id="description" cols="30" rows="10"></textarea>
            <div class="upload-container">
                <div class="upload-item" id="image-item-low">
                    <p class="image-type">Låg upplösning</p>
                    <label class="custom-image-input" for="image-input-low" required><img src="/upload-image.svg" alt=""><p>Välj bild</p></label>
                    <input type="file" name="image-low" id="image-input-low" required>
                    <p class="upload-image-text">Ingen fil har valts</p>
                </div>
                <div class="upload-item" id="image-item-high">
                    <p class="image-type">Hög upplösning</p>
                    <label class="custom-image-input" for="image-input-high" required><img src="/upload-image.svg" alt=""><p>Välj bild</p></label>
                    <input type="file" name="image-high" id="image-input-high" required>
                    <p class="upload-image-text">Ingen fil har valts</p>
                </div>
            </div>
            <div class="custom-select">
                <p>Välj albums</p>
                <select name="albums" multiple>
                </select>
            </div>
            <input type="submit" id="submit-button" value="Ladda upp">
        </form>
        <div class="preview-image">
            <img src="/image-preview.svg" alt="">
        </div>
    </div>
</div>

<script src="/js/nav.js"></script>
<script src="/js/upload.js"></script>